<li data-event="nick-list" class="nick-init notice" data-network="<%= $network %>" data-target="<%= $target %>">
  %= timestamp $timestamp
  <div class="content">
    <span>Participants:</span>
    % my $i = 0;
    % for my $n (sort { $b->{mode} cmp $a->{mode} || $a->{nick} cmp $b->{nick} } @$nicks) {
      <a href="cmd:///query <%= $n->{nick} %>" data-nick="<%= $n->{nick} %>"><%= join '', @$n{qw( mode nick )} %></a><%= ++$i == @$nicks ? '.' : ', ' %>
    % }
  </div>
</li>
