<li class="whois" data-network="<%= $network %>" data-target="any">
  <div class="content">
  %= link_to $nick, view => { network => $network, target => $nick }, class => 'nick'
  (<%= $user %>@<%= $host %> - <%= $realname %>)
  % if ($idle) {
    has been idle for <b><%= $idle %></b> seconds in
  % } else {
    is in
  % }
  % my $i = 0;
  % for my $channel (@$channels) {
    % my $target = $channel; $target =~ s/^.\#/#/;
    <%= link_to $channel, view => { network => $network, target => $target }, class => 'channel' %><%= ++$i == @$channels ? '.' : ', ' %>
  % }
  </div>
  %= timestamp_span($timestamp)
</li>
